<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <Nullable>enable</Nullable>
    <OutputType>Exe</OutputType>
    <RootNamespace>Nemonuri.RepoTools.FStar.BuildTasks.Tests</RootNamespace>
    <TargetFramework>net8.0</TargetFramework>
    <TestingPlatformDotnetTestSupport>true</TestingPlatformDotnetTestSupport>
    <MockFStarExeRootPath>$(ArtifactsPath)mock-fstar-exe</MockFStarExeRootPath>
  </PropertyGroup>

  <ItemGroup>
    <Content Include="xunit.runner.json" CopyToOutputDirectory="PreserveNewest" />
  </ItemGroup>

  <ItemGroup>
    <Compile Include="GenerateFStarConfigJsonTest.fs" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="xunit.v3.mtp-v2" />
  </ItemGroup>

  <ItemGroup>
    <AssemblyMetadata Include="RealFStarExePath" Value="$(RealFStarExePath)" Condition="Exists('$(RealFStarExePath)')" />
    <AssemblyMetadata Include="RealFStarExePath" Value="" Condition="!Exists('$(RealFStarExePath)')" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\Nemonuri.RepoTools.FStar.BuildTasks\Nemonuri.RepoTools.FStar.BuildTasks.fsproj" />
    <ProjectReference Include="..\..\Nemonuri.RepoTools.TestRuntime\Nemonuri.RepoTools.TestRuntime.csproj" />
  </ItemGroup>

  <Target Name="GenerateMockFStarExePathes" BeforeTargets="BeforeCompile" Condition="$(DesignTimeBuild) != 'true'">
    <MSBuild Projects="$(RepoRootPath)Tool.proj" Targets="GenerateMockFStarExe">
      
      <Output TaskParameter="TargetOutputs" ItemName="MockFStarExe" />
    </MSBuild>
    
    <ItemGroup>
      <AssemblyMetadata Include="MockFStarExePath" Value="%(MockFStarExe.Identity)" />
    </ItemGroup>
  </Target>

  <Target Name="_ComputeRunArguments" BeforeTargets="ComputeRunArguments">
    <PropertyGroup>
      <RunArguments>$(RunArguments) -trx $(TestArtifactsPath)$(MSBuildProjectFile).$([System.DateTime]::Now.Ticks).xml</RunArguments>
    </PropertyGroup>
  </Target>

</Project>
