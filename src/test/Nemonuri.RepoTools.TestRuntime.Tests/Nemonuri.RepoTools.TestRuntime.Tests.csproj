<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <OutputType>Exe</OutputType>
    <RootNamespace>Nemonuri.RepoTools.TestRuntime.Tests</RootNamespace>
    <TargetFramework>net8.0</TargetFramework>
    <TestingPlatformDotnetTestSupport>true</TestingPlatformDotnetTestSupport>
  </PropertyGroup>

  <ItemGroup>
    <Content Include="xunit.runner.json" CopyToOutputDirectory="PreserveNewest" />
  </ItemGroup>

  <ItemGroup>
    <Using Include="Xunit" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="xunit.v3.mtp-v2" />
  </ItemGroup>

  <Target Name="GetMSBuildDllPathAndReference" Outputs="@(MSBuildDllPath)"
    Condition="@(MSBuildDllPath) == ''"
    BeforeTargets="BeforeCompile">
    
    <PropertyGroup>
      <_Properties>TestPackageRootPath=$(TestPackageRootPath)</_Properties>
      <_Properties>$(_Properties);TestPackageId=Microsoft.Build.Runtime</_Properties>
      <_Properties>$(_Properties);TestPackageVersion=17.8.29</_Properties>
      <_Properties>$(_Properties);TestPackageTargetFramework=$(TargetFramework)</_Properties>
    </PropertyGroup>
    
    <MSBuild Projects="$(RepoRootPath)Tool.proj"
      Targets="RestoreTestPackage"
      Properties="$(_Properties)">
      
      <Output TaskParameter="TargetOutputs" ItemName="TestPackagePath" />
    </MSBuild>

    <!-- 
          - Calling a String method
            -
    https://learn.microsoft.com/en-us/visualstudio/msbuild/item-functions?view=visualstudio#calling-a-string-method 
        -->
    <ItemGroup Condition="false"> <!-- ...결국 포기 - 'for each' 같은 게 필요해... -->
      <_ContentFile Include="@(TestPackagePath->'%(FullPath)/contentFiles/any')" /> <!-- 이 패키지 레이아웃이 어떻게 되더라... -->
      <_ContentFile Remove="@(_ContentFile)" Condition="!Exists(%(Identity))" />
      <_MSBuildDllFile Include="@(_ContentFile->'%(FullPath)/**/MSBuild.dll')" />
      <_MSBuildDllFile Include="@(_MSBuildDllFile)" Condition="Exists(%(Identity))" />
      <_MSBuildDllFileDirectory Include="@(_MSBuildDllFile->DirectoryName())" />
      <_MSBuildDllFileDirectory Update="@(_MSBuildDllFileDirectory)">
        <Tfm>$([System.String]::new('%(FullPath)').Substring($([System.String]::new('%(FullPath)').LastIndexOfAny('\/'.ToCharArray()))))</Tfm>
      </_MSBuildDllFileDirectory>
      <_MSBuildDllFileDirectory Remove="@(_MSBuildDllFileDirectory)" Condition="$([MSBuild]::IsTargetFrameworkCompatible('$(TargetFramework)', '%(Tfm)')) != 'true'" />
      <MSBuildDllPath Include="@(_MSBuildDllFileDirectory->'%(FullPath)/MSBuild.dll')" />
    </ItemGroup>
    
    <Error Condition="@(TestPackagePath->Count()) != 1" Text="TestPackagePath is not singleton. Count = @(TestPackagePath->Count())" />
    
    <ItemGroup>
      <Content Include="@(TestPackagePath->'%(FullPath)contentFiles/any/net8.0/MSBuild.dll')"
        CopyToOutputDirectory="PreserveNewest"
        Visible="false" />
    </ItemGroup>

  </Target>

</Project>
